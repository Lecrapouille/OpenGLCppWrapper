#version 330

// ----------------------------------------------------------------------------
// Data from C++ program
// ----------------------------------------------------------------------------
uniform sampler2D diffuse;

// ----------------------------------------------------------------------------
// Data from vertex program
// ----------------------------------------------------------------------------
in struct v2f_s
{
   vec2 texCoord;
   vec3 normal;
} v2f;

// ----------------------------------------------------------------------------
// Fragment program output
// ----------------------------------------------------------------------------
out vec4 fragColor;

// ----------------------------------------------------------------------------
// Fragment program
// ----------------------------------------------------------------------------
void main()
{
    fragColor = texture2D(diffuse, v2f.texCoord);
}
